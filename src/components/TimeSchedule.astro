---
import FeaturedImage from '@/libs/FeaturedImage';
import HowToJoin from '@/libs/HowToJoin';
import JoinTicket from '@/libs/JoinTicket';
import ScheduleArea from '@/libs/Schedule';
import Wave from '@/libs/Wave.astro';
import Header1 from '@/libs/headers/Header1';
import Paragraph from '@/libs/headers/Paragraph';
import type { Assets } from '@/libs/stores/assets';
import type { Image } from '@/libs/stores/init';

import type { Schedule } from '@/libs/stores/schedules';

type Props = {
  djSchedules: Schedule[];
  featuredImage: Image;
  assets: Assets;
};

const { djSchedules, featuredImage, assets } = Astro.props;
---

<section class="mt-96 md:mt-72">
  <div class="-mb-1 w-full text-secondary-background">
    <Wave />
  </div>

  <div class="py-48 md:py-32 text-secondary bg-secondary-background" id="timeschedule">
    <Header1 title="TIME<br>SCHEDULE" titleJa="タイムスケジュール" className="mb-16" small client:load />

    <div class="flex flex-col md:flex-row">
      <div class="mb-20 md:mb-0 px-0 md:pl-16 md:pr-12 w-full md:w-1/2 flex flex-col items-center">
        <div class="px-6 md:px-0 w-full half-container-max-width text-left font-medium">
          現時点の予定です。変更になる場合がございます。
        </div>

        <ScheduleArea djSchedules={djSchedules} client:load />
      </div>

      <div class="w-full md:w-1/2 flex flex-col justify-between">
        <FeaturedImage image={featuredImage} right />

        <!-- lets-join 行きのボタンで参加方法エリアより少し上の方に推移してほしいため、ここにIDを設置 -->
        <div id="lets-join" />
      </div>
    </div>

    <div class="mt-48 flex flex-col items-center">
      <h2 class="mb-4 px-6 w-full text-3xl font-bold tracking-wide leading-12 text-center break-keep wrap-anywhere">
        さあ、胸の鼓動と&#8203;共に踊り出そう。
      </h2>
      <JoinTicket assets={assets} client:load />
      <HowToJoin client:load />
      <Paragraph className="mt-4 px-6 text-center break-keep wrap-anywhere">
        テキストテキストト非営利の&#8203;、テキストテキストテキストテキストテキス。
      </Paragraph>
    </div>
  </div>

  <div class="-mt-1 w-full text-secondary-background rotate-180">
    <Wave />
  </div>
</section>
